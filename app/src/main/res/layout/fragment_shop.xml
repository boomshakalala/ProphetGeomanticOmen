<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.xianzhifengshui.widget.auto.AutoTabLayout
        android:id="@+id/tab_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/normalTabLayoutStyle"
        android:background="@color/white_dark"
        app:tabIndicatorColor="@color/orange"
        app:tabSelectedTextColor="@color/orange"
        app:tabTextColor="@color/text_gray"
        app:tabTextAppearance="@style/SmallTabLayoutTextStyle"
        app:auto_textSize_base_width="true"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/pager_shop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout>
