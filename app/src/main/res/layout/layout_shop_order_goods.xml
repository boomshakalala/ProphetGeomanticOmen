<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="210px"
    android:paddingLeft="40px"
    android:paddingRight="40px"
    android:paddingBottom="3px">
    <ImageView
        android:id="@+id/image_shop_order_goods_icon"
        android:layout_width="210px"
        android:layout_height="210px"
        android:scaleType="fitXY"
        android:src="@drawable/pic"/>
    <TextView
        android:id="@+id/text_shop_order_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/black"
        android:layout_marginTop="40px"
        android:layout_marginLeft="36px"
        android:layout_toRightOf="@id/image_shop_order_goods_icon"
        android:text="开光风水纯铜五帝钱"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/orange"
        android:layout_alignLeft="@id/text_shop_order_goods_name"
        android:text="￥18.00"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_smallest"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="x1"/>

</RelativeLayout>