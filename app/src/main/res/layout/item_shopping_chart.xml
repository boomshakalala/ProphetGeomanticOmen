<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="50px"
    android:paddingRight="40px">
    <ImageButton
        android:layout_width="37px"
        android:layout_height="37px"
        app:layout_auto_baseheight="width"
        android:background="@color/white"
        android:layout_gravity="center_vertical"
        android:src="@drawable/selector_shopping_chart_choose_btn"/>
    <ImageView
        android:layout_width="210px"
        android:layout_height="210px"
        android:src="@drawable/pic"
        app:layout_auto_baseheight="width"
        android:layout_marginLeft="28px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginLeft="28px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/black"
            android:layout_marginTop="40px"
            android:text="开光风水纯铜五帝钱"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="118px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_size_smallest"
                android:text="￥20.00"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"/>
            <ImageButton
                android:layout_width="31px"
                android:layout_height="31px"
                android:scaleType="fitXY"
                android:background="@color/white"
                android:src="@drawable/shopping_chart_delete"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_smallest"
                android:layout_marginLeft="33px"
                android:layout_marginRight="33px"
                android:textColor="@color/black"
                android:text="1"/>
            <ImageButton
                android:layout_width="31px"
                android:layout_height="31px"
                android:scaleType="fitXY"
                android:background="@color/white"
                android:src="@drawable/shopping_chart_add"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>