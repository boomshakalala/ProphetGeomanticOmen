<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="40px"
    android:paddingRight="40px"
    android:background="@drawable/selector_recycler_item_bg">
    <ImageView
        android:id="@+id/image_master_list_icon"
        app:layout_auto_baseheight="width"
        android:layout_width="188px"
        android:layout_height="188px"
        android:scaleType="fitXY"
        android:src="@drawable/pic"
        android:layout_marginTop="20px"/>
    <TextView
        android:id="@+id/text_master_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_small"
        android:layout_toRightOf="@id/image_master_list_icon"
        android:layout_marginTop="25px"
        android:layout_marginLeft="33px"
        android:text="张三丰"
        />

    <TextView
        android:id="@+id/text_master_list_point_of_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textColor="@drawable/selector_index_tab_text_color"
        android:layout_alignBaseline="@id/text_master_list_title"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/selector_master_praise"
        android:gravity="bottom"
        android:drawablePadding="3dp"
        android:text="99"/>
    <TextView
        android:id="@+id/text_master_list_single_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/text_gray"
        android:layout_alignBaseline="@id/text_master_list_title"
        android:layout_toLeftOf="@id/text_master_list_point_of_praise"
        android:layout_marginRight="36px"
        android:drawableLeft="@drawable/master_list_single_volume_icon"
        android:gravity="bottom"
        android:drawablePadding="3dp"
        android:text="33单"/>
    <TextView
        android:id="@+id/text_master_list_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_smallest"
        android:textColor="@color/yellow"
        android:layout_alignBaseline="@id/text_master_list_title"
        android:layout_toLeftOf="@id/text_master_list_single_volume"
        android:layout_marginRight="36px"
        android:drawableLeft="@drawable/master_list_lavel_icon"
        android:gravity="bottom"
        android:drawablePadding="3dp"
        android:text="v1"/>
    <com.xianzhifengshui.widget.tag.TagLayout
        android:id="@+id/layout_master_list_tag"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_master_list_title"
        android:layout_alignLeft="@id/text_master_list_title"
        android:layout_marginTop="30px"
        />
    <TextView
        android:id="@+id/text_master_list_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_smallest"
        android:layout_below="@id/layout_master_list_tag"
        android:layout_alignLeft="@id/layout_master_list_tag"
        android:layout_marginTop="29px"
        android:text="张三丰温室派传世人，无党派祖师，著啊啊啊啊啊啊啊啊啊有《资治通鉴》啊是是所啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊的"/>



</RelativeLayout>