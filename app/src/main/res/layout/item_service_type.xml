<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="40px"
    android:paddingRight="40px"
    android:paddingBottom="20px"
    android:paddingTop="20px"
    >
    <TextView
        android:id="@+id/text_service_type_list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/black"
        android:text="买房选址"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_smallest"
        android:text="根据风水理论，将地理因素、公司战略布局和业务范围有机结合，选择出适合公司发展的办公地址，为您的事业发展打开通路。"
        android:layout_below="@id/text_service_type_list_type"
        android:maxWidth="500px"
        android:layout_marginTop="15px"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/text_service_type_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_super_small"
            android:textColor="@color/orange"
            android:text="2000知币"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/service_type_price_icon"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/btn_service_type_list_reservation"
            android:layout_width="80px"
            android:layout_height="30px"
            android:textColor="@color/orange"
            android:layout_marginTop="10px"
            android:textSize="@dimen/text_size_smaller"
            android:text="预约"
            android:background="@drawable/shape_rect_orange_strok"
            android:gravity="center"
            />
    </LinearLayout>




</RelativeLayout>