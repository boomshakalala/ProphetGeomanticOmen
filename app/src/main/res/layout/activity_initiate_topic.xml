<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">
    <include
        layout="@layout/layout_base_toolbar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="72px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_small"
        android:text="@string/text_topic_type"/>
    <com.xianzhifengshui.widget.tag.TagLayout
        android:id="@+id/layout_initiate_topic_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnSize="3"
        app:lineSpacing="13dp"
        app:tagSpacing="20dp"
        android:paddingTop="19px"
        android:paddingBottom="19px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:paddingLeft="37px"
        android:paddingRight="37px"
        android:background="@drawable/shape_white_corner4"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="72px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_small"
        android:text="@string/text_topic_title"/>
    <EditText
        android:id="@+id/edit_initiate_topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="67px"
        android:layout_marginRight="40px"
        android:layout_marginLeft="40px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_small"
        android:hint="@string/text_please_input_topic_title"
        android:background="@drawable/shape_white_corner4"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="72px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_small"
        android:text="@string/text_topic_content"/>
    <EditText
        android:id="@+id/edit_initiate_topic_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="116px"
        android:maxHeight="116px"
        android:layout_marginRight="40px"
        android:layout_marginLeft="40px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_small"
        android:hint="@string/text_please_input_topic_title"
        android:background="@drawable/shape_white_corner4"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="72px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_small"
        android:text="@string/text_add_pic"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_initiate_topic_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        />
    <TextView
        android:id="@+id/btn_initiate_topic"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large"
        android:text="发表"
        android:gravity="center"
        android:background="@color/orange"/>

</LinearLayout>