<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xianzhifengshui.ui.index.home.HomeFragment">
    <com.xianzhifengshui.widget.auto.AutoTabLayout
        android:id="@+id/tab_discover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_dark"
        app:tabIndicatorColor="@color/orange"
        app:tabSelectedTextColor="@color/orange"
        app:tabTextColor="@color/black"
        app:tabTextAppearance="@style/LargerTabLayoutTextStyle"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/pager_discover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout>
