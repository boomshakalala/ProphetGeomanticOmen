<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">
    <include
        layout="@layout/layout_base_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="197px"
        android:orientation="vertical"
        android:layout_marginTop="16px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:background="@color/white"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_small"
            android:text="@string/text_account_balance"/>
        <TextView
            android:id="@+id/text_my_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_super"
            android:layout_marginTop="25px"
            android:text="32,592,218,32"
            />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingRight="40px"
        android:paddingLeft="40px">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spline_height_normal"
            android:background="@color/spline_color"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent">
            <TextView
                android:id="@+id/btn_my_account_recharge"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/selector_commen_btn"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="@dimen/text_size_small"
                android:text="@string/text_recharge"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/my_account_recharge_icon"/>
        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="35px"
            android:layout_marginBottom="35px"
            android:background="@color/spline_color"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent">
            <TextView
                android:id="@+id/btn_my_account_withdrawal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:background="@drawable/selector_commen_btn"
                android:gravity="center"
                android:textSize="@dimen/text_size_small"
                android:text="@string/text_withdrawal"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/my_account_withdrawal_icon"/>
        </LinearLayout>



    </LinearLayout>
    <RelativeLayout
        android:id="@+id/btn_my_account_bill"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@drawable/selector_commen_btn"
        android:layout_marginTop="14px"
        android:paddingLeft="40px"
        android:paddingRight="40px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            android:gravity="center_vertical"
            android:drawablePadding="14dp"
            android:drawableLeft="@drawable/my_account_bill_icon"
            android:layout_centerVertical="true"
            android:text="@string/text_my_bill"/>
        <ImageView
            android:layout_width="16px"
            android:layout_height="30px"
            android:src="@drawable/arrow_right_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btn_my_account_bank_card"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@drawable/selector_commen_btn"
        android:layout_marginTop="14px"
        android:paddingLeft="40px"
        android:paddingRight="40px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            android:gravity="center_vertical"
            android:drawablePadding="14dp"
            android:drawableLeft="@drawable/my_account_bank_card_icon"
            android:layout_centerVertical="true"
            android:text="@string/text_my_bank_card"/>
        <ImageView
            android:layout_width="16px"
            android:layout_height="30px"
            android:src="@drawable/arrow_right_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>


</LinearLayout>