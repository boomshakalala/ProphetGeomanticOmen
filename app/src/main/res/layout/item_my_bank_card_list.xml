<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30px"
    android:paddingBottom="30px"
    android:paddingLeft="40px"
    android:paddingRight="40px"
    android:background="@color/white"
    android:layout_marginTop="13px">
    <ImageView
        android:id="@+id/image_my_bank_card_list_icon"
        android:layout_width="80px"
        android:layout_height="80px"
        android:src="@drawable/pic"/>
    <ImageView
        android:layout_width="17px"
        android:layout_height="27px"
        android:src="@drawable/arrow_right_icon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/image_my_bank_card_list_icon">
        <TextView
            android:id="@+id/text_my_bank_card_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:text="中国银行"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            android:text="尾号8361"
            android:layout_below="@id/text_my_bank_card_list_name"
            android:layout_marginTop="23px"/>
    </RelativeLayout>


</RelativeLayout>