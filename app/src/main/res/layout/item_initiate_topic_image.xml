<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="135px"
    android:layout_height="135px"
    app:layout_auto_baseheight="width">
   <ImageView
       android:id="@+id/btn_initiate_topic_add"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scaleType="centerCrop"
       android:src="@drawable/initiate_topic_add_image"/>
    <ImageView
        android:id="@+id/btn_initiate_topic_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:layout_auto_baseheight="height"
        android:visibility="gone"
        android:src="@drawable/initiate_topic_delete_image"/>

</RelativeLayout>