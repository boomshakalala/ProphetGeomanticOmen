<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginLeft="40px"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"
            android:shadowColor="@color/gray"
            android:text="星陨阁"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/orange"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"
            android:text="等待支付"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/spline_color"/>
        <include
            layout="@layout/layout_shop_order_goods"/>
        <include
            layout="@layout/layout_shop_order_goods"/>
        <include
            layout="@layout/layout_shop_order_goods"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_smaller"
            android:text="共计2件商品"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_smaller"
            android:layout_marginLeft="20px"
            android:text="合计：￥162.00元"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_smallest"
            android:text="(含运费￥0.00元)"
            android:layout_marginLeft="15px" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/spline_color"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        >
        <TextView
            android:layout_width="140px"
            android:layout_height="50px"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_rect_orange_strok"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/orange"
            android:gravity="center"
            android:text="去支付"
            />
        <TextView
            android:layout_width="140px"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_rect_gray_strok"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_gray"
            android:gravity="center"
            android:text="取消订单"
            />

    </RelativeLayout>

</LinearLayout>