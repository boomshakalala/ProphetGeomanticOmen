<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/contentlayout"
        layout="@layout/layout_common_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px">
        <ImageButton
            android:id="@+id/btn_shopping_chart_choose_all"
            android:layout_width="50px"
            android:layout_height="50px"
            android:background="@color/white"
            android:src="@drawable/shopping_chart_unchoose"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"/>
        <TextView
            android:id="@+id/text_shopping_chart_choose_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_smaller"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/btn_shopping_chart_choose_all"
            android:layout_marginLeft="18px"
            android:text="@string/text_choose_all"/>
        <ImageButton
            android:id="@+id/btn_shopping_chart_choose_money"
            android:layout_width="50px"
            android:layout_height="50px"
            android:background="@color/white"
            android:src="@drawable/shopping_chart_unchoose"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80px"
            android:layout_toRightOf="@id/text_shopping_chart_choose_all"/>
        <TextView
            android:id="@+id/text_shopping_chart_choose_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_smaller"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/btn_shopping_chart_choose_money"
            android:layout_marginLeft="18px"
            android:text="@string/text_money_sum"/>
        <TextView
            android:id="@+id/text_shopping_chart_money_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_smaller"
            android:text="￥23.00"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/text_shopping_chart_choose_money"/>
        <Button
            android:layout_width="260px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_larger"
            android:background="@color/orange"
            android:text="结算"/>
    </RelativeLayout>


</LinearLayout>